            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3">
                <button type="button" class="btn btn-primary" id="Nextbtn" onclick="SubmitForm2();">
                    下一步</button>
                @Html.ValidationMessage("errorConnection")
            </div>
        </div>
    </div>
   
