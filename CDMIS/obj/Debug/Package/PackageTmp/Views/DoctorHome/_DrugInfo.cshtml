                        @Html.TextBoxFor(model => model.DrugInfo.StartDateTime, new { id = "StartDateTimeInput", @onclick = "WdatePicker({minDate:'#F{$dp.$D(FirstDate)}',maxDate:'#F{$dp.$D(LastDate)}',dateFmt:'yyyy-MM-dd HH:mm:ss'})", @class = "form-control" })
