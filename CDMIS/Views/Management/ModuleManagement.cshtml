@using (Html.BeginForm("ModuleManagement", "Management", FormMethod.Post, new { id = "MMForm", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @*<div class="form-group">+
        <label class="col-sm-3 control-label">
            患者ID:</label>
