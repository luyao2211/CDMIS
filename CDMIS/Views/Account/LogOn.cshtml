@model CDMIS.Models.LogOnModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img alt="Welcome" src="../../Content/Image/Background.jpg" style="width: 420px;
    height: 320px; float: left;" />
