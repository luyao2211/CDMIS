@{
    ViewBag.Title = "DivisionLayout";
}

<link href="../../Content/jquery.dataTables.css" rel="stylesheet" type="text/css" />
<link href="../../Content/simpleModal.css" rel="stylesheet" type="text/css" />

<script src="../../Scripts/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
<script type="text/javascript" src="../../Scripts/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../../Scripts/MicrosoftAjax.js"></script>
<script type="text/javascript" src="../../Scripts/MicrosoftMvcAjax.js"></script>
<script type="text/javascript" src="../../Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="../../Scripts/jquery.simplemodal.1.4.4.min.js" type="text/javascript"></script>
<script type="text/javascript" src="../../Scripts/jquery.dataTables.js"></script>
<style type="text/css">

    #tabs
    {
        overflow: hidden;
        width: 100%;
        margin: 0;
        padding: 0;
        list-style: none;
    }
    
    #tabs li
    {
        float: left;
        margin: 0 -15px 0 0;
        font-family: \9ED1\4F53;
        font-size: 15px;
    }
    
    #tabs li a
    {
        float: left;
        position: relative;
        padding: 0 40px;
        height: 0;
        line-height: 30px;
        text-transform: uppercase;
        text-decoration: none;
        color: #fff;
        border-right: 30px solid transparent;
        border-bottom: 30px solid #3D3D3D;
        border-bottom-color: #6C6C6C;
        opacity: .8;
        filter: alpha(opacity=30);
    }
    
    #tabs a:hover, #tabs a:focus
    {
        border-bottom-color: #2ac7e1;
        opacity: 1;
        filter: alpha(opacity=100);
    }
    
    #tabs a:focus
    {
        outline: 0;
    }
    
    #tabs #current
    {
        border-bottom-color: #00A600;
        opacity: 1;
        filter: alpha(opacity=100);
    }
    
    #simplemodal-container
    {
        height: 250px;
        width: 400px;
    }
     #alert-container
    {
        height: 160px;
        width: 300px;
  
@*    .tdhover
    {
        background-color: #cccc00;
    }*@
    #delete-container
    {
        height: 160px;
        width: 300px;
    }
    #alert-container
    {
        height: 160px;
        width: 300px;
    }
</style>
<input type="text" id="FirstDate" style="display:none" />
<input type="text" id="LastDate" style="display:none" " />
<input type="text" id="VisitClass" style="display:none" " />



<div style="background-color: White; width: 100%; " align="center">
    <ul id="tabs" style="margin-top: 5px;">
        <li>
            @Ajax.ActionLink("未匹配科室字典表", "UnCompDivision", new {}, new AjaxOptions { OnSuccess = "success();", OnBegin = "hide();", UpdateTargetId = "ShowClinicalProfileInfo", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading" })</li>
        <li>
            @Ajax.ActionLink("已匹配科室字典表", "CompDivision", new {}, new AjaxOptions { OnSuccess = "success();", OnBegin = "hide();", UpdateTargetId = "ShowClinicalProfileInfo", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading" })</li>
        <li>
            @Ajax.ActionLink("科室字典表", "Division", new { }, new AjaxOptions { OnSuccess = "success();", OnBegin = "hide();", UpdateTargetId = "ShowClinicalProfileInfo", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading" })</li>
    </ul>
    <div id="ShowClinicalProfileInfo" style="margin-top: 20px;">
    </div>
    
        <div id="loading" style="display: none; margin-top: 200px" align="center">
            <img alt="Load" src="/Content/Image/loading.gif" width="300" height="20" style="max-width: 90%" />
            <p>
                加载中，请稍后</p>
        </div>
</div>
@*alert弹出框*@
<div id="alertDiv" style="display: none;">
    <div class="modalHeader">
        <span>提示框</span></div>
    <div class="modalContent">
        <form class="form-horizontal" role="form">
        @*<input type="text" disabled="disabled" id="Warning"/>*@
        <p id="Warning">
        </p>
        <table>
            <tr>
                <td>
                    <input type="button" class="btn btn-primary Sure" value="确定" />
                </td>
                <td>
                    <input type="button" class="btn btn-default simplemodal-close" id="Close" style="display: none"
                        value="取消" />
                </td>
            </tr>
        </table>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
     
        $("#tabs li:eq(0) a").click();
        $("#tabs li:eq(0) a").attr("id", "current");

    });

    $("#tabs li:eq(0) a").click(function () {
        $(this).attr("id", "current");
        $("#tabs li:eq(1) a").attr("id", "");
        $("#tabs li:eq(2) a").attr("id", "");
    });

    $("#tabs li:eq(1) a").click(function () {
        $(this).attr("id", "current");
        $("#tabs li:eq(0) a").attr("id", "");
        $("#tabs li:eq(2) a").attr("id", "");
    });

    $("#tabs li:eq(2) a").click(function () {
        $(this).attr("id", "current");
        $("#tabs li:eq(0) a").attr("id", "");
        $("#tabs li:eq(1) a").attr("id", "");
    });

    $(".Sure").click(function () {
        $("#Close").click();
    })

   


    function hide() {
        var target = document.getElementById("ShowClinicalProfileInfo");
        target.style.display = "none";
        var target1 = document.getElementById("loading");
        target1.style.display = "block";

    }
    function success() {
        var target = document.getElementById("ShowClinicalProfileInfo");
        target.style.display = "block";
        var target1 = document.getElementById("loading");
        target1.style.display = "none";
    }


    
  

</script>
